.ratings
	position relative
	z-index 9

	.ui-loading-overlay-big:not(.ui-loading-hidden-content)::after
		top 240px
		bottom auto

.rating-parameters
	position relative
	overflow hidden
	max-height ($fontSizeDefault*8)

	&__item
		overflow hidden
		max-height ($fontSizeDefault*8)
		margin-bottom -($fontSizeDefault*0.4)

	&::after
		content ' '
		display block
		width 100%
		height ($fontSizeDefault*2)
		position absolute
		top ($fontSizeDefault*6.2)
		margin-left -($marginDefault)
		background linear-gradient(to bottom, rgba(236, 240, 241, 0) 0, rgba(236, 240, 241, 0.9) 60%, rgba(236, 240, 241 , 1) 100%) /* W3C */

.rating-parameter-list
	margin $marginSmall 0
	line-height ($fontSizeDefault*1.8)

	&--item
		&__link
			display inline-block
			padding 0 4px
			margin-bottom 4px

			&:hover
				text-decoration none

			&--active
				background-color $colorGreen

				.pseudo-link
					color #fff
					border none

.rating-type-list
	@extends .rating-parameter-list
	font-weight bold

	& > &--item
		font-size $fontSizeLarge

		& > .rating-type-list--level > .rating-type-list--item
			font-size $fontSizeMedium
			margin $marginDefault 0 0 $marginMedium

			& > .rating-type-list--level .rating-type-list--item
				font-size $fontSizeDefault
				font-weight normal
				margin-left $marginMedium

.city-column-list-item.city-column-list-item--active .pseudo-link
	color #fff
	border none
