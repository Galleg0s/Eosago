.vzr-content
	position relative

.vzr-bg
	position relative
	background-color rgba(27, 175, 93, 0.5)
	background linear-gradient(180deg, #28467F 0, #5FDFD2 100%)
	background-size cover
	width 100%

	&--home
		position absolute
		height 584px

		@media only screen and (min-width: 568px)
			height 505px

		@media only screen and (min-width: 1055px)
			height 468px

		@media only screen and (min-width: 1280px)
			height 376px

.vzr-loader
	position fixed
	background-color #fff
	top 0
	left 0
	bottom 0
	right 0
	z-index 999

	&__spinner
		position absolute
		top calc(50% - 40px)
		left calc(50% - 40px)

.vzr-search-form
	animation-duration 0.5s
	position relative
	z-index 3

.vzr-about
	&__content
		position relative

	&__text
		@media only screen and (min-width: 1366px)
			width 100%
			position absolute
			top 0

.vzr-feature
	animation-duration 0.5s

.hidden
	visibility hidden

.delay1
	animation-delay 0.3s

.delay2
	animation-delay 0.6s

.delay3
	animation-delay 0.9s
