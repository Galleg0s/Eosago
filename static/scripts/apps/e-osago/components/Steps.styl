@require '~ui-2013/guideline.styl'

.e-osago-steps
	&__item
		color $colorBorderDark

		&:first-child .e-osago-steps__indicator::before
			display none

		&--selected
			color $colorGreen
			font-weight bold

			.e-osago-steps__indicator
				border-color $colorGreen

				&::before
					border-color $colorGreen
					z-index -1

		&--success
			color $colorGreen
			font-weight bold

			.e-osago-steps__indicator
				border-color $colorGreen
				background-color $colorGreen

				&::before
					border-color $colorGreen
					z-index -1

				&::after
					content ''
					display block
					position absolute
					left 3px
					top 0
					width 4px
					height 8px
					border-right 1px solid #fff
					border-bottom 1px solid #fff
					transform rotateZ(45deg)

	&__indicator
		margin-top $marginXXSmall
		position relative
		display inline-block
		box-sizing border-box
		width 16px
		height 16px
		border 2px solid $colorBorderDark
		background-color #fff
		box-shadow 0 0 0 5px #fff
		border-radius 50%

		&::before
			content ''
			display block
			position absolute
			right 14px
			top 5px
			width 180px
			border-top 2px solid $colorBorderDark
			z-index -2
